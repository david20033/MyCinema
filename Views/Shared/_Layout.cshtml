<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MyCinema</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/MyCinema.styles.css" asp-append-version="true" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">

</head>
<body>
    <!-- Navigation Bar -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top">
        <div class="container-fluid">
            <a class="navbar-brand" href="/">MyCinema</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item"><a href="@Url.Action("Index", "Movie")" class="nav-link active">Screenings</a></li>
                    <li class="nav-item"><a href="@Url.Action("Index", "AboutUs")" class="nav-link">About us</a></li>

                    @if (User.IsInRole("Admin"))
                    {
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="adminDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">Admin Panel</a>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item" href="@Url.Action("Salons", "Salon")">View Salons</a></li>
                                <li><a class="dropdown-item" href="@Url.Action("AddSalon", "Salon")">Add Salon</a></li>
                                <li><a class="dropdown-item" href="@Url.Action("MovieTimelines", "Salon")">All Screenings</a></li>
                                <li><a class="dropdown-item" href="@Url.Action("NowPlaying", "Movie")">Now Playing</a></li>
                                <li><a class="dropdown-item" href="@Url.Action("MovieList", "Movie")">Movies in Db</a></li>
                                <li><a class="dropdown-item" href="@Url.Action("CreateScreening", "Screening")">Add Screening</a></li>
                                <li><a class="dropdown-item" href="@Url.Action("Index", "Analytics")">Analytics Overview</a></li>
                                <li><a class="dropdown-item" href="@Url.Action("Index", "Admin")">Admin Panel</a></li>
                            </ul>
                        </li>
                    }
                </ul>

                <!-- Search Bar -->
                <form class="d-flex align-items-center me-4" action="@Url.Action("Search", "Movie")" method="get">
                    <div class="position-relative">
                        <input class="form-control ps-4 pe-5 rounded-pill shadow-sm" type="search" placeholder="Search..." aria-label="Search" name="query" style="width: 200px; height: 36px;">
                        <button class="btn position-absolute end-0 top-50 translate-middle-y me-2 p-0 border-0 bg-transparent text-primary" type="submit">
                            <i class="bi bi-search"></i>
                        </button>
                    </div>
                </form>


                <!-- Login Partial -->
                <div class="d-flex">
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </div>
    </nav>

    <!-- Main content -->
    <div class="container mt-4">
        <div class="pb-3">
            @RenderBody()
        </div>
        <footer class="text-center py-3">
            <span class="text-muted">&copy; 2024 MyCinema</span>
        </footer>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation/1.19.5/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.12/jquery.validate.unobtrusive.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
