@model List<MyCinema.ViewModels.AnalyticsMovieViewModel>

<div class="container mt-5">
    <h3 class="mb-4">Top 3 Most Profitable Movies</h3>

    <table class="table table-striped table-bordered">
        <thead class="table-dark">
            <tr>
                <th>Title</th>
                <th>Profit (лв.)</th>
                <th>Tickets Sold</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var movie in Model)
            {
                <tr>
                    <td>@movie.Title</td>
                    <td class="fw-bold text-success">@movie.Profit.ToString("N2")</td>
                    <td>@movie.TicketSoldCount</td>
                </tr>
            }
        </tbody>
    </table>
</div>
