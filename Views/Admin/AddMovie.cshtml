@model MyCinema.Data.Movie

<div class="container my-5">
    <h1 class="text-center mb-4">Add Movie</h1>
    <form asp-action="AddMovie" method="post" enctype="multipart/form-data" class="row g-3 needs-validation">
        <input type="text" id="Id" name="Id" value="@Guid.NewGuid()" hidden />
        <div class="col-md-12">
            <label for="Name" class="form-label">Name</label>
            <input type="text" id="Name" name="Name" class="form-control" placeholder="Name" required />
            <div class="invalid-feedback">Please enter a name.</div>
        </div>
        <div class="col-md-12">
            <label for="OriginalTitle" class="form-label">Original Title</label>
            <input type="text" id="OriginalTitle" name="OriginalTitle" class="form-control" placeholder="Original Title" required />
            <div class="invalid-feedback">Please enter an Original Title.</div>
        </div>
        <div class="col-md-6">
            <label for="PremierDate" class="form-label">Premier Date</label>
            <input type="date" id="PremierDate" name="PremierDate" class="form-control" required />
            <div class="invalid-feedback">Please select premier date</div>
        </div>
        <div class="col-md-3">
            <label for="DurationInMinutes" class="form-label">Duration (minutes)</label>
            <input type="number" id="DurationInMinutes" name="DurationInMinutes" class="form-control" placeholder="Duration" required />
            <div class="invalid-feedback">Please enter a Duration</div>
        </div>
        <div class="col-md-3">
            <label for="Subtitles" class="form-label">Subtitles</label>
            <select id="Subtitles" name="Subtitles" class="form-select" asp-items=ViewBag.Subs required>
                <option value="" disabled selected>Choose...</option>
            </select>
            <div class="invalid-feedback">Please select at least one genre.</div>
        </div>
        <div class="col-md-12">
            <label for="MovieGenres" class="form-label">Genres</label>
            <select id="MovieGenres" name="MovieGenres" class="form-select" asp-items=ViewBag.Genre required>
                <option value="" disabled selected>Choose...</option>
            </select>
            <div class="invalid-feedback">Please select at least one genre.</div>
        </div>
        <div class="col-md-12">
            <label for="MovieActors" class="form-label">Actors (separeted by ',')</label>
            <input type="text" id="MovieActors" name="MovieActors" class="form-control" placeholder="Actors" required />
            <div class="invalid-feedback">Please enter Actors</div>
        </div>
        <div class="col-md-12">
            <label for="MoviePhotos" class="form-label">Upload Photos</label>
            <input type="file" id="MoviePhotos" name="MoviePhotos" class="form-control" multiple />
            <small class="text-muted">You can upload multiple photos.</small>
        </div>
        <div class="col-md-12">
            <label for="Description" class="form-label">Description</label>
            <textarea class="form-control" id="Description" name="Description" rows="3" placeholder="Description..."></textarea>
            <div class="invalid-feedback">Please enter a Description</div>
        </div>
        <div class="col-12 text-center mt-4">
            <button type="submit" class="btn btn-primary w-50">Add Movie</button>
        </div>
    </form>
</div>