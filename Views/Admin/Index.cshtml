@model List<MyCinema.Data.Movie>

<h1>All Movies</h1>

<div class="row">
    <div class="d-flex flex-column flex-wrap flex-md-row p-4 gap-4 py-md-5 align-items-center justify-content-center">
    @foreach (var movie in Model)
    {
        <div class="list-group filmlist">
        @if (movie.MoviePhotos != null && movie.MoviePhotos.Any())
        {
            <img src="data:@(movie.MoviePhotos.First().ContentType);base64,@(Convert.ToBase64String(movie.MoviePhotos.First().Data))"
                         class="img-fluid img-thumbnail FilmImage" style="width:300px; height: 300px" alt="Car Photo" />
        }
        else
        {
                    <img src="/images/placeholder-car.jpg" class="img-fluid img-thumbnail FilmImage" style="width:300px; height: 300px" alt="No Photo Available" />
        }
                <div class="text-center mt-2">
                    <button type="button" class="btn btn-primary">Details</button>
                    <button type="button" class="btn btn-warning">Edit</button>
                    <button type="button" class="btn btn-danger">Delete</button>
                </div>
                <p class="mt-2 mb-0 fs-2 text-center fw-bold">X-Men</p>
            </div>
    }
</div>
</div>
