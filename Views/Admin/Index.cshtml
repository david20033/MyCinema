@model List<MyCinema.Data.AppSetting>

@{
    ViewData["Title"] = "Application Settings";
}

<h1>Application Settings</h1>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">@TempData["SuccessMessage"]</div>
}

<table class="table">
    <thead>
        <tr>
            <th>Setting</th>
            <th>Value</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var setting in Model)
        {
            <tr>
                <td>@setting.Description</td>
                <td>
                    <form asp-action="Update" method="post" class="d-flex">
                        <input type="hidden" name="key" value="@setting.Key" />
                        <input type="@setting.InputType" name="value" value="@setting.Value" class="form-control me-2" />
                        <button type="submit" class="btn btn-primary">Save</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
